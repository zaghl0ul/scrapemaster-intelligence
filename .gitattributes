# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Docker files
Dockerfile text
docker-compose*.yml text

# Requirements files
requirements*.txt text

# Git files
.gitignore text
.gitattributes text

# Binary files (should not be tracked)
*.db binary
*.db-shm binary
*.db-wal binary
*.sqlite binary
*.sqlite3 binary
*.log binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.exe binary
